<h1>HELLO CHAT!</h1>

<main class="container home">
  <%= render "project_nav.html.erb", feature_name: "The Lounge" %>
  <div class="chat-wrapper feature-card">
    <div id="chat-contents" class="chat-contents">
      <% @messages.each do |message| %>
      <div class="message-wrap is-owned">
        <div class="message-main-content">
          <div class="message-content">
            <p><%= message.content %></p>
          </div>
        </div>
        <div class="message-user">
          <p>HC</p>
        </div>
      </div>
      <% end %>
    </div>
    <div class="form-group">
    <%= form_with(model: @message, html: { id: "new-message-form", class: "chat-form"} ) do |f| %>
      <%= f.hidden_field :project_id, value: @project.id %>

      <%= f.text_field :content, class: "form-control", id: "message-input", placeholder: "PENIS TEST PLACEHOLDER GO FUCK YOURSELF!", autoFocus: true %>
    </div>
    <% end %>

  </div>
</main>
